#!/bin/bash

# Prompt for user input
echo "Project name:"
read PROJECT

echo "Environment:"
read ENVIRONMENT

# Safety check to prevent duplicate environment overwrite
if [ -d "$PROJECT/$ENVIRONMENT" ]; then
  echo "Environment already exists"
  exit 1
fi

echo "Git repo address:"
read REPO_URL

echo "Server Alias"
read SERVER_ALIAS

if grep -xq "Host $SERVER_ALIAS" ~/.ssh/config; then
  echo 'Server alias already exists in ~/.ssh/config'
  exit 1
fi

echo "Server IP"
read SERVER_IP

echo "Server Port"
read SERVER_PORT

echo "Server Username"
read SERVER_USERNAME

# Reset to home
cd ~

# Directory we're in
echo "In directory `pwd`"

echo $PROJECT
echo $ENVIRONMENT

mkdir -p "$PROJECT/$ENVIRONMENT"
cd "$PROJECT/$ENVIRONMENT"

git clone $REPO_URL repo
mkdir -p deploy

cd deploy
git init

# Add our server ssh config to our ~/.ssh/config file
printf '\n\n%s\n%s\n\t%s\n\t%s\n\t%s' "#Added via env-setup-rsync on `date`" "Host $SERVER_ALIAS" "HostName $SERVER_IP" "User $SERVER_USERNAME" "Port $SERVER_PORT" >> ~/.ssh/config